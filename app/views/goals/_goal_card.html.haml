.goal-card
  .goal-card-floater
    .goal-card-owner-image
      = link_to goal.owner do
        = avatar(goal.owner)
    .goal-card-owner-name
      = link_to goal.owner do
        #{goal.owner.name}
      wants to
  .goal-card-inner
    %h1.goal-card-title
      = link_to goal.name, goal

    .goal-card-reason
      %p= goal.reason

    .goal-card-critical-mass
      With
      = link_to goal do
        %var= goal.affirmers.count
        others
