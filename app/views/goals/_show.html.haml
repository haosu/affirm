.goal
  I want to
  %h1.goal-title
    #{goal.name}

  .goal-owner-image
    = link_to goal.owner do
      = avatar(goal.owner)
      %h2
        #{goal.owner.name}

  .goal-reason
    %p because
    %p= goal.reason

  .goal-critical-mass
    With
    %var= goal.affirmers.count
    out of
    %var= goal.critical_mass
    others

  .goal-affirmer-progress-bar
    = progress_bar(goal.affirmers.count, goal.critical_mass)
